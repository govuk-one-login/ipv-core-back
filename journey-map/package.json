{
  "name": "ipv-core-journey-map",
  "version": "0.0.1",
  "description": "Generate an interactive IPV core journey map",
  "main": "src/server.ts",
  "author": "Government Digital Service",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "esbuild src/application.ts --bundle --minify --sourcemap --outfile=public/application.js",
    "start": "NODE_ENV=development tsx src/server.ts",
    "start-build": "node --enable-source-maps build/server.js",
    "tsc": "tsc",
    "lint": "eslint src && prettier src --check",
    "lint-fix": "eslint --fix src && prettier src --write"
  },
  "dependencies": {
    "express": "5.0.1",
    "mermaid": "10.9.3",
    "svg-pan-zoom": "3.6.2",
    "yaml": "2.7.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.11.0",
    "@types/express": "^5.0.0",
    "esbuild": "^0.25.3",
    "eslint": "^9.11.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.9.0",
    "prettier": "^3.5.1",
    "tsx": "^4.19.3",
    "typescript-eslint": "^8.31.0"
  }
}
