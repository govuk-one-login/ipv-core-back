{
  "StartAt": "ProcessJourneyStep",
  "States": {
    "ProcessJourneyStep": {
      "Type": "Task",
      "Resource": "${IPVProcessJourneyStepFunctionArn}",
      "Next": "IsJourney",
      "Parameters": {
        "journey.$": "$.journey",
        "ipvSessionId.$": "$$.Execution.Input.ipvSessionId",
        "ipAddress.$": "$$.Execution.Input.ipAddress"
      }
    },
    "IsJourney": {
      "Type": "Choice",
      "Choices": [
        {
          "Variable": "$.journey",
          "IsPresent": false,
          "Next": "Success"
        },
        {
          "Variable": "$.journey",
          "StringEquals": "/journey/check-existing-identity",
          "Next": "CheckExistingIdentity"
        },
        {
          "Variable": "$.journey",
          "StringEquals": "/journey/evaluate-gpg45-scores",
          "Next": "EvaluateGpg45Scores"
        },
        {
          "Variable": "$.journey",
          "StringEquals": "/journey/select-cri",
          "Next": "SelectCriFunction"
        },
        {
          "Variable": "$.journey",
          "StringMatches": "/journey/cri/build-oauth-request/*",
          "Next": "BuildCriOauthRequestFunction"
        }
      ],
      "Default": "Success"
    },
    "CheckExistingIdentity": {
      "Type": "Task",
      "Resource": "${CheckExistingIdentityFunctionArn}",
      "Parameters": {
        "journey.$": "$.journey",
        "ipvSessionId.$": "$$.Execution.Input.ipvSessionId",
        "ipAddress.$": "$$.Execution.Input.ipAddress"
      },
      "Next": "ShouldRunProcessJourney"
    },
    "EvaluateGpg45Scores": {
      "Type": "Task",
      "Resource": "${EvaluateGpg45ScoresFunctionArn}",
      "Parameters": {
        "journey.$": "$.journey",
        "ipvSessionId.$": "$$.Execution.Input.ipvSessionId",
        "ipAddress.$": "$$.Execution.Input.ipAddress"
      },
      "Next": "ShouldRunProcessJourney"
    },
    "SelectCriFunction": {
      "Type": "Task",
      "Resource": "${SelectCriFunctionArn}",
      "Parameters": {
        "journey.$": "$.journey",
        "ipvSessionId.$": "$$.Execution.Input.ipvSessionId",
        "ipAddress.$": "$$.Execution.Input.ipAddress"
      },
      "Next": "ShouldRunProcessJourney"
    },
    "BuildCriOauthRequestFunction": {
      "Type": "Task",
      "Resource": "${BuildCriOauthRequestFunctionArn}",
      "Parameters": {
        "journey.$": "$.journey",
        "ipvSessionId.$": "$$.Execution.Input.ipvSessionId",
        "ipAddress.$": "$$.Execution.Input.ipAddress"
      },
      "Next": "ShouldRunProcessJourney"
    },
    "ShouldRunProcessJourney": {
      "Type": "Choice",
      "Choices": [
        {
          "Variable": "$.journey",
          "IsPresent": false,
          "Next": "Success"
        },
        {
          "Variable": "$.journey",
          "StringEquals": "/journey/next",
          "Next": "ProcessJourneyStep"
        }
      ],
      "Default": "Success"
    },
    "Success": {
      "Type": "Succeed"
    }
  }
}